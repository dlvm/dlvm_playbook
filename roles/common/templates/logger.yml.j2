version: 1
formatters:
  simple:
    format: '%(asctime)s - %(filename)s - %(lineno)d - %(levelname)s - %(message)s'
handlers:
  api_handler:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: simple
    filename: {{dlvm_log_path}}/api.log
    delay: True
    when: midnight
    interval: 1
    backupCount: 14
  dpv_handler:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: simple
    filename: {{dlvm_log_path}}/dpv.log
    delay: True
    when: midnight
    interval: 1
    backupCount: 14
  ihost_handler:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: simple
    filename: {{dlvm_log_path}}/ihost.log
    delay: True
    when: midnight
    interval: 1
    backupCount: 14
  monitor_handler:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: simple
    filename: {{dlvm_log_path}}/monitor.log
    delay: True
    when: midnight
    interval: 1
    backupCount: 14
loggers:
  dlvm_api:
    level: DEBUG
    handlers: [api_handler]
    propagate: yes
  dlvm_dpv:
    level: DEBUG
    handlers: [dpv_handler]
    propagate: yes
  dlvm_ihost:
    level: DEBUG
    handlers: [ihost_handler]
    propagate: yes
  dlvm_monitor:
    level: DEBUG
    handlers: [monitor_handler]
    propagate: yes

